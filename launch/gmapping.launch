<launch>
  <!-- Set tf -->
  <node pkg="tf" type="static_transform_publisher" name="world_to_map" args="0 0 0 0 0 0 world map 100" />

  <!-- Launch the map server  -->
  <arg name="map_file" default="$(find value_iteration)/maps/turtle.yaml"/>
  <node name="map_server" pkg="map_server" type="map_server" args="$(arg map_file)" output="screen" />

  <!-- Launch other launch files -->
  <include file="$(find turtlebot3_gazebo)/launch/turtlebot3_world.launch"/>
  <include file="$(find turtlebot3_teleop)/launch/turtlebot3_teleop_key.launch"/>

  <arg name="slam_methods" default="gmapping" /> 
  <include file="$(find turtlebot3_slam)/launch/turtlebot3_slam.launch" value="$(arg slam_methods)" />
</launch>
